# Broadcasting Configuration
# Set to 'true' to use Socket.io (Laravel Echo Server), 'false' to use Pusher
VITE_USE_SOCKET_IO=true

# Socket.io / Laravel Echo Server (for local development)
VITE_ECHO_SERVER_HOST=localhost:6001

# Pusher Configuration (for production)
VITE_PUSHER_APP_KEY=your-pusher-key-here
VITE_PUSHER_APP_CLUSTER=mt1

# API URL
VITE_API_URL=http://localhost:8000/api
